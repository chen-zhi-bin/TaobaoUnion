<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/coloPrimaryDark">
        <TextView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="领券联盟"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/scan_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/search_white"
            android:layout_alignParentRight="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/scan_icon"
            android:layout_toRightOf="@+id/logo"
            android:background="@drawable/shape_edit_box_bg"
            android:focusable="false"
            android:hint="搜你想搜的宝贝"
            android:textSize="16dp"
            />
    </RelativeLayout>

<!--    搜索框下的导航-->
     <com.google.android.material.tabs.TabLayout
         android:layout_width="match_parent"
         app:tabMode="scrollable"
         android:id="@+id/home_indicator"
         app:tabIndicatorColor="@color/coloTabSelected"
         app:tabTextColor="@color/coloTabNormal"
         app:tabRippleColor="@color/coloTabNormal"
         app:tabBackground="@color/coloPrimary"
         app:tabSelectedTextColor="@color/coloTabSelected"
         android:layout_height="30dp"/>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:id="@+id/home_pager"
        android:layout_height="match_parent"
        android:overScrollMode="never"/>

</LinearLayout>